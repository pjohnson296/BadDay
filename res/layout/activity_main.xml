<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
 
   android:layout_width="match_parent"
   android:layout_height="match_parent"
   android:paddingBottom="@dimen/activity_vertical_margin"
   android:paddingLeft="@dimen/activity_horizontal_margin"
   android:paddingRight="@dimen/activity_horizontal_margin"
   android:paddingTop="@dimen/activity_vertical_margin"
   android:background="@drawable/rant2"
   tools:context=".MainActivity" >
   
   <Chronometer
       android:id="@+id/chronometer1"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentBottom="true"
       android:layout_marginBottom="19dp"
       android:fontFamily="Roboto"
       android:text="Chronometer"
       android:textColor="@android:color/white"
       android:textSize="40sp"
       android:textStyle="@android:color/white"
       android:typeface="sans" />

   <TextView
       android:id="@+id/timeID"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignRight="@+id/button2"
       android:layout_alignTop="@+id/chronometer1" />

   <TextView
       android:id="@+id/dBID"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignBaseline="@+id/timeID"
       android:layout_alignBottom="@+id/timeID"
       android:layout_toRightOf="@+id/chronometer1"
       android:textSize="20sp" />

     <Button
         android:id="@+id/archiveButton"
         android:layout_width="70dp"
         android:layout_height="65dp"
         android:layout_alignParentTop="true"
         android:layout_marginTop="1dp"
         android:layout_marginLeft="148dp"
         android:layout_toRightOf="@+id/startStop"
         android:background="@null"
/>
             <!--  android:onClick="openArchive" --> 

     <Button
         android:id="@+id/startStop"
         android:layout_width="105dp"
         android:layout_height="101dp"
         android:layout_above="@+id/dBID"
         android:layout_marginLeft="237dp"
         android:layout_marginBottom="104dp"
         android:background="@drawable/recordbutton"
         android:onClick="startStop" />
    
</RelativeLayout>